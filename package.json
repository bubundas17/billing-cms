{
  "name": "billing-cms",
  "version": "0.0.1",
  "main": "src/app.js",
  "repository": "git@github.com:bubundas17/billing-cms.git",
  "author": "Bubun Das <bubundas17@gmail.com>",
  "contributors": [
    "Amit Mondal <androidone548@gmail.com>"
  ],
  "license": "MIT",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install",
    "build:scss": "cross-env NODE_ENV=production sass -w ./src/assets/scss/index.scss ./src/assets/css/styles.css",
    "watch:scss": "sass -w ./src/assets/scss/index.scss ./src/assets/css/styles.css",
    "dev": "concurrently -c \"bold.yellow,bold.cyan\" -n \"App,CSS\" \"tsnd --respawn ./src/app.ts\" \"npm run watch:scss\"",
    "build": "npm run build:css && babel ./src -d ./dist --delete-dir-on-start --copy-files",
    "start": "node ./dist/app.js"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "git add --all"
    ]
  },
  "_moduleAliases": {
    "@": "./src",
    "@controllers": "./src/controllers",
    "@models": "./src/models",
    "@routes": "./src/routes",
    "@helpers": "./src/helpers",
    "@configs": "./src/configs",
    "@utils": "./src/utils",
    "@lib": "./src/lib",
    "@enums": "./src/enums"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/eslint-parser": "^7.16.3",
    "@babel/node": "^7.16.0",
    "@babel/plugin-proposal-private-methods": "^7.16.7",
    "@babel/preset-env": "^7.16.4",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.16",
    "@types/nodemailer": "^6.4.4",
    "@types/passport": "^1.0.7",
    "autoprefixer": "^10.4.2",
    "babel-plugin-module-resolver": "^4.1.0",
    "bootstrap": "^5.1.3",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.0",
    "lint-staged": "^12.1.4",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0",
    "prettier": "^2.5.1",
    "sass": "^1.49.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "connect-ensure-login": "^0.1.1",
    "connect-mongo": "^4.6.0",
    "cookie-parser": "^1.4.6",
    "env-schema": "^3.5.0",
    "express": "^4.17.1",
    "express-handlebars": "^6.0.2",
    "express-session": "^1.17.2",
    "express-validator": "^6.13.0",
    "glob": "^7.2.0",
    "handlebars": "^4.7.7",
    "http-errors": "^1.8.1",
    "mongoose": "^6.0.15",
    "nodemailer": "^6.7.2",
    "passport": "^0.5.0",
    "passport-local": "^1.0.0"
  }
}
