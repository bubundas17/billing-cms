{
  "name": "billing-cms",
  "version": "0.0.1",
  "main": "src/app.ts",
  "repository": "git@github.com:bubundas17/billing-cms.git",
  "author": "Bubun Das <bubundas17@gmail.com>",
  "contributors": [
    "Amit Mondal <androidone548@gmail.com>"
  ],
  "license": "MIT",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install",
    "clean": "rimraf ./dist",
    "copy-files": "copyfiles -u 1 ./src/**/*.{css,js,hbs} ./dist",
    "build:scss": "sass ./src/assets/scss/index.scss ./src/assets/css/styles.css",
    "watch:scss": "sass -w ./src/assets/scss/index.scss ./src/assets/css/styles.css",
    "server": "tsnd --respawn --transpile-only --exit-child --watch src ./src/app.ts",
    "dev": "concurrently -k -c \"bold.yellow,bold.cyan\" -n \"App,SCSS\" \"npm:server\" \"npm:watch:scss\"",
    "build": "npm run clean && npm run build:scss && tsc && npm run copy-files",
    "start": "node ./dist/app.js"
  },
  "lint-staged": {
    "*{.js,.ts}": [
      "npm run lint:fix",
      "git add --all"
    ]
  },
  "_moduleAliases": {
    "@controllers": "./src/controllers",
    "@models": "./src/models",
    "@routes": "./src/routes",
    "@helpers": "./src/helpers",
    "@configs": "./src/configs",
    "@utils": "./src/utils",
    "@lib": "./src/lib",
    "@enums": "./src/enums",
    "@services": "./src/services",
    "@core": "./src/core",
    "@dto": "./src/dto",
    "@decorators": "./src/decorators",
    "@exceptions": "./src/exceptions"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/connect-ensure-login": "^0.1.7",
    "@types/connect-flash": "^0.0.37",
    "@types/connect-mongo": "^3.1.3",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/express-handlebars": "^6.0.0",
    "@types/express-session": "^1.17.4",
    "@types/glob": "^7.2.0",
    "@types/http-errors": "^1.8.2",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.18",
    "@types/nodemailer": "^6.4.4",
    "@types/passport": "^1.0.7",
    "@types/passport-local": "^1.0.34",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "autoprefixer": "^10.4.2",
    "bootstrap": "^5.1.3",
    "concurrently": "^7.0.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.0",
    "lint-staged": "^12.1.4",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "sass": "^1.49.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@typegoose/typegoose": "^9.6.2",
    "agenda": "^4.2.1",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "connect-ensure-login": "^0.1.1",
    "connect-flash": "^0.1.1",
    "connect-mongo": "^4.6.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.0",
    "envalid": "^7.2.2",
    "express": "^4.17.1",
    "express-handlebars": "^6.0.2",
    "express-session": "^1.17.2",
    "glob": "^7.2.0",
    "handlebars": "^4.7.7",
    "http-errors": "^1.8.1",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "mongoose": "^6.2.1",
    "morgan": "^1.10.0",
    "nodemailer": "^6.7.2",
    "passport": "^0.5.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "ts-node-dev": "^1.1.8"
  }
}
