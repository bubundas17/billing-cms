{
  "name": "billing-cms",
  "version": "0.0.1",
  "main": "src/app.js",
  "repository": "git@github.com:bubundas17/billing-cms.git",
  "author": "Bubun Das <bubundas17@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon",
    "clean": "rimraf ./dist",
    "build:css": "postcss ./assets/scss/*.scss -o ./assets/css/styles.css",
    "build": "npm run clean && babel ./src -d ./dist --copy-files",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install",
    "start": "npm run build && node ./dist/app.js"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "git add --all"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/eslint-parser": "^7.16.3",
    "@babel/node": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "babel-plugin-module-resolver": "^4.1.0",
    "bootstrap": "^5.1.3",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.0",
    "json-loader": "^0.5.7",
    "lint-staged": "^12.1.4",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "connect-ensure-login": "^0.1.1",
    "connect-mongo": "^4.6.0",
    "cookie-parser": "^1.4.6",
    "env-schema": "^3.5.0",
    "express": "^4.17.1",
    "express-handlebars": "^6.0.2",
    "express-session": "^1.17.2",
    "express-validator": "^6.13.0",
    "glob": "^7.2.0",
    "handlebars": "^4.7.7",
    "http-errors": "^1.8.1",
    "mongoose": "^6.0.15",
    "morgan": "^1.10.0",
    "passport": "^0.5.0",
    "passport-local": "^1.0.0"
  }
}
