<div class="container">
    <div class="my-3 card">
        <h5 class="card-header border-bottom card-title">New Ticket</h5>
        <div class="card-body">
            <form action="" class="form-group">
                <div class="row mt-3">
                    <div class="col-md-4">
                        <label class="form-label" for="priority">Priority</label>
                        <select class="form-control" id="priority">
                            <option>Low</option>
                            <option>Medium</option>
                            <option>High</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label" for="department">Department</label>
                        <select class="form-control" id="department">
                            <option>Support</option>
                            <option>Sales</option>
                            <option>Billing</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label" for="department">Product/Service</label>
                        <select class="form-control" id="department">
                            <option>None</option>
                            <option>Product 1</option>
                            <option>Product 2</option>
                        </select>
                    </div>
                </div>
                <div class="mb-3 mt-3">
                    <label class="form-label" for="subject">Subject</label>
                    <input type="text" class="form-control" id="subject" placeholder="Enter Subject">
                </div>
                <div class="mb-3 mt-3">
                    <label class="form-label" for="body">Body</label>
                    <textarea type="text" class="form-control" id="body" placeholder="What question do you have?"
                        rows="10"> </textarea>
                </div>

                <div class="mb-3 mt-3">
                    <label class="form-label" for="priority">Attachments</label>
                    <input class="form-control" type="file" id="priority" multiple="">
                </div>
                <div class="col-12 mt-1">
                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>