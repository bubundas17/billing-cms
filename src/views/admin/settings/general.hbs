<div class='flex justify-center'>
  <div class='card  mt-20 w-96'>
    <div class='card-title primary'>
      <h5
        class=''
      >Settings</h5>
    </div>
    <div class='card-body'>
      <div class='mb-3'>
        <form action='/admin/settings/general' method='post' class="form-group">
          <label
            for='site-title'
            class='form-label inline-block mb-2 text-gray-700'
          >Site Title</label>
          <input
            value='{{siteTitle}}'
            type='text'
            class='form-control input-normal'
            id='site-title'
            placeholder='Site Title'
            name='siteTitle'
          />
          <label
            for='url_prefix'
            class='form-label inline-block mb-2 text-gray-700'
          >Url Prefix</label>
          <input
            value='{{urlPrifix}}'
            type='text'
            class='form-control input-normal'
            id='url_prefix'
            name='urlPrifix'
            placeholder='Url Prefix'
          />
          <button
            class='inline-block px-6 mt-3 py-2.5 bg-blue-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out'
          >Save</button>

        </form>
      </div>
    </div>

  </div>
</div>