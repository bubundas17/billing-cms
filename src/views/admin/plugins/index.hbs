<h1>All Plugins</h1>
{{#each plugins}}
<div class="mt-3 plugin card">
    <h2>{{pluginInfo.name}}</h2>
    <p>{{pluginInfo.description}}</p>
    <p>By {{pluginInfo.author}}</p>
    <p>{{#if active}}Enabled{{else}}Disabled{{/if}}</p>
    <p>{{#if active}}
        <a href="/admin/plugins/{{name}}/disable">Disable</a>
        {{else}}
        <a href="/admin/plugins/{{name}}/enable">Enable</a>
        {{/if}}
    </p>
</div>
{{/each}}