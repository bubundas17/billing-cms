<h1>All Themes</h1>

<table class='table'>
  <thead>
    <tr>
      <th scope='col'>Name</th>
      <th scope='col'>Description</th>
      <th scope='col'>Version</th>
      <th scope='col'>Status</th>
      <th scope='col'></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {{#each themes}}
      <tr>
        <th>{{name}}</th>
        <td>{{description}}</td>
        <td>v{{version}}</td>
        <td>{{status}}</td>
        <td>
          <form action='/admin/themes/enable' method='post'>
            <input type='hidden' name='themeName' value='{{name}}' />
            <button class='btn btn-primary' type='submit' {{#if status}}disabled{{/if}}>Enable</button>
          </form>
        </td>
        <td>
          <form action='/admin/themes/remove' method='post'>
            <input type='hidden' name='themeName' value='{{name}}' />
            <button class='btn btn-danger' type='submit' {{#if status}}disabled{{/if}}>Uninstall</button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>